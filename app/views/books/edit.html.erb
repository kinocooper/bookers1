<h1>Editing Book</h1>

<!--エラーメッセージ-->
<!--エラーが発生しているかどうか-->
<% if @book.errors.any? %>
  <% eCount = @book.errors.count %>
  <% if eCount > 1 %>
    <%= eCount %> errors prohibited this book from being saved:
  <% else %>
    <%= eCount %> error prohibited this book from being saved:
  <% end %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>

  <p>Title</p>
  <%= f.text_field:title %>

  <p>Body</p>
  <%= f.text_area:body %>

  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show",show_book_path(@book.id) %>
<%= link_to "Back",index_path %>