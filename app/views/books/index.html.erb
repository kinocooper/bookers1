<h1>Books</h1>

<% @books.each do |book| %>
  <%= book.title %>
  <%= book.body %>
  <%= link_to "show", show_book_path(book.id) %>
  <%= link_to "edit", edit_book_path(book.id) %>
  <%= link_to "destroy", destroy_book_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %>
  <br>
<% end %>

<h2>New book</h2>

<%= form_with model: @newBook, url: '/books/@newBook.id', method: :post, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field:title %>

  <h4>Body</h4>
  <%= f.text_area:body %>

  <%= f.submit 'Create Book' %>
<% end %>
