<h1>Books</h1>

<% @books.each do |book| %>
  <%= book.title %>
  <%= book.body %>
  <%= link_to "show", show_book_path(book.id) %>
  <%= link_to "edit", edit_book_path(book.id) %>
  <%= link_to "destroy", destroy_book_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %>
  <br>
<% end %>

<h2>New book</h2>
<!--エラーメッセージ-->
<!--エラーが発生しているかどうか-->
<% if @newBook.errors.any? %>
  <% eCount = @newBook.errors.count %>
  <% if eCount > 1 %>
    <%= eCount %> errors prohibited this book from being saved:
  <% else %>
    <%= eCount %> error prohibited this book from being saved:
  <% end %>
  <ul>
    <% @newBook.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @newBook, url:create_book_path, method: :post, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field:title %>

  <h4>Body</h4>
  <%= f.text_area:body %>

  <%= f.submit 'Create Book' %>
<% end %>
